<Window x:Class="TraceLogic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TraceLogic"
        mc:Ignorable="d"
        Title="TraceLogic - Venus .trc File Analyzer" 
        Height="700" Width="1000"
        MinHeight="550" MinWidth="750"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Window.Resources>
        <!-- ... (Existing Styles remain the same) ... -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#A0A0A0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button" x:Key="TitleBarButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button" x:Key="CloseButton" BasedOn="{StaticResource TitleBarButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="#F0F2F5" CornerRadius="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ... (Title Bar remains the same) ... -->
            <Grid Grid.Row="0" Height="40" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Path Data="M19,3H5C3.9,3 3,3.9 3,5V19C3,20.1 3.9,21 5,21H19C20.1,21 21,20.1 21,19V5C21,3.9 20.1,3 19,3M9,17H7V15H9V17M9,13H7V11H9V13M9,9H7V7H9V9M17,17H11V15H17V17M17,13H11V11H17V13M17,9H11V7H17V9Z" 
                          Fill="#0078D7" Width="20" Height="20" Stretch="Uniform" VerticalAlignment="Center"/>
                    <TextBlock Text="Trace Extractor" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#1C1C1C" FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource TitleBarButton}" Content="?" FontSize="16" FontWeight="Bold" Click="About_Click"/>
                    <Button Style="{StaticResource TitleBarButton}" Content="—" Click="Minimize_Click"/>
                    <Button Style="{StaticResource TitleBarButton}" Content="☐" Click="Maximize_Restore_Click"/>
                    <Button Style="{StaticResource CloseButton}" Content="✕" Click="Close_Click"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="10,0,10,10" AllowDrop="True" DragEnter="MainContent_DragEnter" DragLeave="MainContent_DragLeave" Drop="MainContent_Drop">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- ... (Header Section remains the same) ... -->
                <Border Grid.Row="0" Background="White" Padding="20" Margin="0,0,0,10" CornerRadius="4" BorderBrush="#DDDDDD" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Trace File Importer" FontSize="22" FontWeight="SemiBold" Foreground="#1C1C1C"/>
                            <TextBlock Text="Select a Hamilton Venus trace file (.trc) to begin analysis."
                                       Foreground="#555555" TextWrapping="Wrap" Margin="0,5,0,0"/>
                        </StackPanel>
                        <Button Grid.Column="1" 
                                Style="{StaticResource PrimaryButton}"
                                x:Name="SelectFileButton"
                                Width="180" Height="40" 
                                VerticalAlignment="Center"
                                Click="SelectFileButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <Path Width="16" Height="16" Fill="White" Margin="0,0,10,0"
                                      Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z" />
                                <TextBlock Text="Select .trc File" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <Grid Grid.Row="1">
                    <Border x:Name="WelcomeMessage" Background="White" CornerRadius="4" BorderBrush="#DDDDDD" BorderThickness="1">
                        <TextBlock Text="Drag and drop a .trc file onto this area."
                                   FontSize="16" Foreground="Gray"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>

                    <TabControl x:Name="DataTabs" Visibility="Collapsed">

                        <!-- NEW: Liquid Transfer Report Tab -->
                        <TabItem Header="Liquid Transfer Report">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid Grid.Row="0" x:Name="LiquidTransferGrid" ItemsSource="{Binding AnalysisResult.LiquidTransfers}" CanUserReorderColumns="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='HH:mm:ss.fff'}" />
                                        <DataGridTextColumn Header="Source Labware" Binding="{Binding SourceLabware}" />
                                        <DataGridTextColumn Header="Source Position" Binding="{Binding SourcePositionId}" />
                                        <DataGridTextColumn Header="Target Labware" Binding="{Binding TargetLabware}" />
                                        <DataGridTextColumn Header="Target Position" Binding="{Binding TargetPositionId}" />
                                        <DataGridTextColumn Header="Volume (uL)" Binding="{Binding Volume}" />
                                        <DataGridTextColumn Header="Tip Labware" Binding="{Binding TipLabwareId}" Visibility="Collapsed" />
                                        <DataGridTextColumn Header="Tip Position" Binding="{Binding TipPositionId}" Visibility="Collapsed" />
                                        <DataGridTextColumn Header="Channel" Binding="{Binding ChannelId}" />
                                    </DataGrid.Columns>
                                </DataGrid>

                                <GroupBox Grid.Row="1" Header="Export Options" Margin="0,10,0,0">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Select columns to show/export:" Margin="0,0,0,5"/>
                                        <WrapPanel Margin="0,0,0,10">
                                            <CheckBox Content="Timestamp" IsChecked="True" Tag="0" Margin="0,0,15,5" Checked="ColumnCheckBox_Changed" Unchecked="ColumnCheckBox_Changed"/>
                                            <CheckBox Content="Source Labware" IsChecked="True" Tag="1" Margin="0,0,15,5" Checked="ColumnCheckBox_Changed" Unchecked="ColumnCheckBox_Changed"/>
                                            <CheckBox Content="Source Position" IsChecked="True" Tag="2" Margin="0,0,15,5" Checked="ColumnCheckBox_Changed" Unchecked="ColumnCheckBox_Changed"/>
                                            <CheckBox Content="Target Labware" IsChecked="True" Tag="3" Margin="0,0,15,5" Checked="ColumnCheckBox_Changed" Unchecked="ColumnCheckBox_Changed"/>
                                            <CheckBox Content="Target Position" IsChecked="True" Tag="4" Margin="0,0,15,5" Checked="ColumnCheckBox_Changed" Unchecked="ColumnCheckBox_Changed"/>
                                            <CheckBox Content="Volume (uL)" IsChecked="True" Tag="5" Margin="0,0,15,5" Checked="ColumnCheckBox_Changed" Unchecked="ColumnCheckBox_Changed"/>
                                            <CheckBox Content="Tip Labware" IsChecked="False" Tag="6" Margin="0,0,15,5" Checked="ColumnCheckBox_Changed" Unchecked="ColumnCheckBox_Changed"/>
                                            <CheckBox Content="Tip Position" IsChecked="False" Tag="7" Margin="0,0,15,5" Checked="ColumnCheckBox_Changed" Unchecked="ColumnCheckBox_Changed"/>
                                            <CheckBox Content="Channel" IsChecked="True" Tag="8" Margin="0,0,15,5" Checked="ColumnCheckBox_Changed" Unchecked="ColumnCheckBox_Changed"/>
                                        </WrapPanel>
                                        <Button x:Name="ExportButton" Content="Export Data..." Style="{StaticResource PrimaryButton}" Width="150" Height="30" HorizontalAlignment="Left" Click="ExportButton_Click"/>
                                    </StackPanel>
                                </GroupBox>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Analysis Summary">
                            <!-- ... (Master-Detail View remains the same) ... -->
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" MinHeight="100"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="*" MinHeight="100"/>
                                </Grid.RowDefinitions>
                                <GroupBox Grid.Row="0" Header="Pipetting Steps">
                                    <DataGrid x:Name="PipettingStepsGrid" ItemsSource="{Binding AnalysisResult.PipettingSteps}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="#" Binding="{Binding StartLineNumber}" Width="Auto"/>
                                            <DataGridTextColumn Header="Action" Binding="{Binding ActionType}" Width="*"/>
                                            <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime, StringFormat='HH:mm:ss.fff'}" Width="Auto"/>
                                            <DataGridTextColumn Header="Duration (ms)" Binding="{Binding Duration.TotalMilliseconds}" Width="Auto"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="Transparent"/>
                                <GroupBox Grid.Row="2" Header="Channel Details (for selected step)">
                                    <DataGrid ItemsSource="{Binding ElementName=PipettingStepsGrid, Path=SelectedItem.ChannelActions}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Channel" Binding="{Binding ChannelNumber}" Width="*"/>
                                            <DataGridTextColumn Header="Labware" Binding="{Binding LabwareId}" Width="2*"/>
                                            <DataGridTextColumn Header="Position" Binding="{Binding PositionId}" Width="*"/>
                                            <DataGridTextColumn Header="Volume (uL)" Binding="{Binding Volume}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                            </Grid>
                        </TabItem>

                        <TabItem Header="Raw Log Data">
                            <!-- ... (Raw Log Data View remains the same) ... -->
                            <DataGrid Margin="5" ItemsSource="{Binding AnalysisResult.AllEntries}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="#" Binding="{Binding LineNumber}" Width="Auto"/>
                                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss'}" Width="Auto"/>
                                    <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="*"/>
                                    <DataGridTextColumn Header="Command" Binding="{Binding Command}" Width="2*"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                                    <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="3*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>
                </Grid>

                <!-- ... (Status Bar and DragDropOverlay remain the same) ... -->
                <Border Grid.Row="2" Background="#0078D7" Padding="10" Margin="0,10,0,0" CornerRadius="0,0,4,4">
                    <TextBlock x:Name="StatusTextBlock"
                               Text="Ready. Please select a trace file."
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </Border>
                <Border x:Name="DragDropOverlay"
                        Grid.Row="1"
                        Grid.RowSpan="2" 
                        Margin="0,0,0,44"
                        Background="#88FFFFFF"
                        BorderBrush="#0078D7"
                        BorderThickness="2"
                        CornerRadius="4"
                        Visibility="Collapsed">
                    <TextBlock Text="Drop the .trc file here"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#0078D7"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>

